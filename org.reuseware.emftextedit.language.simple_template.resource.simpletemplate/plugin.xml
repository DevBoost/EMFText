<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="org.eclipse.emf.ecore.extension_parser">
      <parser
            class="org.reuseware.emftextedit.language.simple_template.resource.simpletemplate.SimpletemplateResourceFactoryImpl"
            type="simpletemplate">
      </parser>
   </extension>

   <extension
         point="org.reuseware.emftextedit.concretesyntax">
      <concretesyntax
            uri="http://www.reuseware.org/simple_template"
            csName="simpletemplate"
            csDefinition="model/simpletemplate.cs">
      </concretesyntax>
   </extension>

   <extension
         point="org.eclipse.core.contenttype.contentTypes">
      <file-association
            content-type="org.reuseware.emftextedit.filetype"
            file-extensions="simpletemplate">
      </file-association>
   </extension>

</plugin>
