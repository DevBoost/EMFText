<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
	<extension point="org.emftext.access.syntax">
		<metaInformationProvider class="org.emftext.language.hedl.resource.hedl.mopp.HedlMetaInformation" id="org.emftext.language.hedl.resource.hedl.mopp.HedlMetaInformation">
		</metaInformationProvider>
	</extension>
	
	<extension id="org.emftext.language.hedl.resource.hedl.problem" name="EMFText Problem" point="org.eclipse.core.resources.markers">
		<persistent value="true">
		</persistent>
		<super type="org.eclipse.core.resources.problemmarker">
		</super>
		<super type="org.eclipse.core.resources.textmarker">
		</super>
		<super type="org.eclipse.emf.ecore.diagnostic">
		</super>
	</extension>
	
	<extension id="org.emftext.language.hedl.resource.hedl.problem.syntax_error" name="EMFText Problem" point="org.eclipse.core.resources.markers">
		<persistent value="true">
		</persistent>
		<super type="org.emftext.language.hedl.resource.hedl.problem">
		</super>
	</extension>
	
	<extension id="org.emftext.language.hedl.resource.hedl.problem.print_problem" name="EMFText Problem" point="org.eclipse.core.resources.markers">
		<persistent value="true">
		</persistent>
		<super type="org.emftext.language.hedl.resource.hedl.problem">
		</super>
	</extension>
	
	<extension id="org.emftext.language.hedl.resource.hedl.problem.unresolved_reference" name="EMFText Problem" point="org.eclipse.core.resources.markers">
		<persistent value="true">
		</persistent>
		<super type="org.emftext.language.hedl.resource.hedl.problem">
		</super>
	</extension>
	
	<extension id="org.emftext.language.hedl.resource.hedl.problem.analysis_problem" name="EMFText Problem" point="org.eclipse.core.resources.markers">
		<persistent value="true">
		</persistent>
		<super type="org.emftext.language.hedl.resource.hedl.problem">
		</super>
	</extension>
	
	<extension id="org.emftext.language.hedl.resource.hedl.problem.builder_error" name="EMFText Problem" point="org.eclipse.core.resources.markers">
		<persistent value="true">
		</persistent>
		<super type="org.emftext.language.hedl.resource.hedl.problem">
		</super>
	</extension>
	
	<extension id="org.emftext.language.hedl.resource.hedl.nature" name="hedl nature" point="org.eclipse.core.resources.natures">
		<runtime>
			<run class="org.emftext.language.hedl.resource.hedl.mopp.HedlNature">
			</run>
		</runtime>
		<builder id="org.emftext.language.hedl.resource.hedl.builder">
		</builder>
	</extension>
	
	<extension point="org.eclipse.core.resources.builders" id="org.emftext.language.hedl.resource.hedl.builder" name="hedl Builder">
		<builder hasNature="true">
			<run class="org.emftext.language.hedl.resource.hedl.mopp.HedlBuilderAdapter">
			</run>
		</builder>
	</extension>
	
	<extension-point id="org.emftext.language.hedl.resource.hedl.default_load_options" name="Default Load Options" schema="schema/default_load_options.exsd">
	</extension-point>
	
	<extension point="org.eclipse.emf.ecore.extension_parser">
		<parser class="org.emftext.language.hedl.resource.hedl.mopp.HedlResourceFactoryDelegator" type="hedl">
		</parser>
	</extension>
	
	<extension-point id="org.emftext.language.hedl.resource.hedl.additional_extension_parser" name="Additional Extension Parser" schema="schema/additional_extension_parser.exsd">
	</extension-point>
	
</plugin>
