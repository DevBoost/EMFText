<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
	<extension point="org.emftext.access.syntax">
		<metaInformationProvider class="org.emftext.language.simpleweave.resource.simpleweave.mopp.SimpleweaveMetaInformation" id="org.emftext.language.simpleweave.resource.simpleweave.mopp.SimpleweaveMetaInformation">
		</metaInformationProvider>
	</extension>
	
	<extension id="org.emftext.language.simpleweave.resource.simpleweave.problem" name="EMFText Problem" point="org.eclipse.core.resources.markers">
		<persistent value="true">
		</persistent>
		<super type="org.eclipse.core.resources.problemmarker">
		</super>
		<super type="org.eclipse.core.resources.textmarker">
		</super>
		<super type="org.eclipse.emf.ecore.diagnostic">
		</super>
	</extension>
	
	<extension id="org.emftext.language.simpleweave.resource.simpleweave.problem.syntax_error" name="EMFText Problem" point="org.eclipse.core.resources.markers">
		<persistent value="true">
		</persistent>
		<super type="org.emftext.language.simpleweave.resource.simpleweave.problem">
		</super>
	</extension>
	
	<extension id="org.emftext.language.simpleweave.resource.simpleweave.problem.print_problem" name="EMFText Problem" point="org.eclipse.core.resources.markers">
		<persistent value="true">
		</persistent>
		<super type="org.emftext.language.simpleweave.resource.simpleweave.problem">
		</super>
	</extension>
	
	<extension id="org.emftext.language.simpleweave.resource.simpleweave.problem.unresolved_reference" name="EMFText Problem" point="org.eclipse.core.resources.markers">
		<persistent value="true">
		</persistent>
		<super type="org.emftext.language.simpleweave.resource.simpleweave.problem">
		</super>
	</extension>
	
	<extension id="org.emftext.language.simpleweave.resource.simpleweave.problem.analysis_problem" name="EMFText Problem" point="org.eclipse.core.resources.markers">
		<persistent value="true">
		</persistent>
		<super type="org.emftext.language.simpleweave.resource.simpleweave.problem">
		</super>
	</extension>
	
	<extension id="org.emftext.language.simpleweave.resource.simpleweave.problem.builder_error" name="EMFText Problem" point="org.eclipse.core.resources.markers">
		<persistent value="true">
		</persistent>
		<super type="org.emftext.language.simpleweave.resource.simpleweave.problem">
		</super>
	</extension>
	
	<extension id="org.emftext.language.simpleweave.resource.simpleweave.nature" name="simpleweave nature" point="org.eclipse.core.resources.natures">
		<runtime>
			<run class="org.emftext.language.simpleweave.resource.simpleweave.mopp.SimpleweaveNature">
			</run>
		</runtime>
		<builder id="org.emftext.language.simpleweave.resource.simpleweave.builder">
		</builder>
		<builder id="org.emftext.language.simpleweave.resource.simpleweave.taskItemBuilder">
		</builder>
	</extension>
	
	<extension point="org.eclipse.core.resources.builders" id="org.emftext.language.simpleweave.resource.simpleweave.builder" name="simpleweave Builder">
		<builder hasNature="true">
			<run class="org.emftext.language.simpleweave.resource.simpleweave.mopp.SimpleweaveBuilderAdapter">
			</run>
		</builder>
	</extension>
	
	<extension point="org.eclipse.core.resources.builders" id="org.emftext.language.simpleweave.resource.simpleweave.taskItemBuilder" name="simpleweave Task Item Builder">
		<builder hasNature="true">
			<run class="org.emftext.language.simpleweave.resource.simpleweave.mopp.SimpleweaveTaskItemBuilder">
			</run>
		</builder>
	</extension>
	
	<extension-point id="org.emftext.language.simpleweave.resource.simpleweave.default_load_options" name="Default Load Options" schema="schema/default_load_options.exsd">
	</extension-point>
	
	<extension point="org.eclipse.emf.ecore.extension_parser">
		<parser class="org.emftext.language.simpleweave.resource.simpleweave.mopp.SimpleweaveResourceFactoryDelegator" type="simpleweave">
		</parser>
	</extension>
	
	<extension-point id="org.emftext.language.simpleweave.resource.simpleweave.additional_extension_parser" name="Additional Extension Parser" schema="schema/additional_extension_parser.exsd">
	</extension-point>
	
</plugin>
